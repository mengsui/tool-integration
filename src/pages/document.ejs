<!DOCTYPE html>
<html>
<head>
  <meta charSet="utf-8" />
  <meta name="viewport"
    content="viewport-fit=cover, initial-scale=1, maximum-scale=1, user-scalable=no,width=device-width" />
</head>

<body>
  <div id="root"></div>
</body>
<script>
  repairSoftKeyboard();
  function repairSoftKeyboard() {
    var u = navigator.userAgent;
    var flag;
    var myFunction;
    var toplen = 0;
    var isIOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/);
    if (isIOS) {
      document.body.addEventListener('focusin', () => {
        flag = true;
        toplen = document.documentElement.scrollTop || window.pageYOffset || document.body.scrollTop;
        clearTimeout(myFunction);
      });
      document.body.addEventListener('focusout', () => {
        flag = false;
        if (!flag) {
          myFunction = setTimeout(function () {
            window.scrollTo({ top: toplen, left: 0, behavior: "smooth" })
          }, 200);
        };
      });
    };
  };
</script>

</html>
